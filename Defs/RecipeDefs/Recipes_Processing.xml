<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<RecipeDef ParentName="ProcessRaw">
		<defName>ProcessRawCotton</defName>
		<label>weave cotton cloth</label>
		<description>Weave Raw Cotton into Cloth.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawCotton</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawCotton</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Cloth>25</Cloth>
		</products>
		<skillRequirements>
			<li>
				<skill>Crafting</skill>
				<minLevel>4</minLevel>
			</li>
		</skillRequirements>
	</RecipeDef>

	<RecipeDef ParentName="ProcessRaw">
		<defName>ProcessRawDevilstrand</defName>
		<label>weave devilstrand cloth</label>
		<description>Weave Raw Devilstrand into Cloth.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawDevilstrand</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawDevilstrand</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<DevilstrandCloth>25</DevilstrandCloth>
		</products>
		<skillRequirements>
			<li>
				<skill>Crafting</skill>
				<minLevel>8</minLevel>
			</li>
		</skillRequirements>
	</RecipeDef>
	
	<RecipeDef>
		<defName>SalvageApparel</defName>
		<label>salvage apparel</label>
		<description>Salvage unwanted apparel into raw materials.</description>
		<jobString>Salvaging apparel.</jobString>
		<workAmount>1000</workAmount>
		<workSpeedStat>TailoringSpeed</workSpeedStat>
		<effectWorking>Tailor</effectWorking>
		<soundWorking>Recipe_Tailor</soundWorking>
		<workSkill>Crafting</workSkill>
		<ingredients>
			<li>
				<filter>
				<categories>
					<li>Apparel</li>
				</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<specialProducts>
			<li>Smelted</li>
		</specialProducts>
		<fixedIngredientFilter>
			<categories>
				<li>Apparel</li>
			</categories>
		</fixedIngredientFilter>
		<recipeUsers>
		<!--<li>TableLoom</li>-->
		</recipeUsers>
	</RecipeDef>
	
</Defs>
