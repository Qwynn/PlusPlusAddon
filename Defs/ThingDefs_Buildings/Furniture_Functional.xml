<Buildings>

<!-- Bedroom Items -->
	
	<ThingDef ParentName="Anon2FurnitureBase">
		<defName>ANON2Dresser</defName>
		<label>dresser</label>
		<thingClass>Building_Storage</thingClass>
		<description>A place for colonist to store personal belongings. When placed with a bed it will increase comfort and rest effectiveness slightly.</description>
		<graphicData>
			<texPath>Things/Building/Furniture/BedroomStuff/Dresser</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2,1)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<size>(2,1)</size>
		<building>
			<preventDeterioration>true</preventDeterioration>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>Weapons</li>
						<li>Apparel</li>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<categories>
						<li>Apparel</li>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
		<altitudeLayer>MoteOverhead</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.4</fillPercent>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToBuild>900</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>8</Beauty>
			<Mass>30</Mass>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>40</costStuffCount>
		<comps>
			<li Class="CompProperties_Facility">
				<statOffsets>
					<BedRestEffectiveness>0.06</BedRestEffectiveness>
					<Comfort>0.1</Comfort>
				</statOffsets>
				<maxSimultaneous>1</maxSimultaneous>
			</li>
		</comps>
		<PathCost>80</PathCost>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>
		<surfaceType>Item</surfaceType>
		<researchPrerequisites>
			<li>PPAdvConstruction</li>
		</researchPrerequisites>
	</ThingDef>

