<?xml version="1.0" encoding="utf-8" ?>
<Plants>

    <ThingDef ParentName="LT_PlantDecorativeBase">
        <defName>LT_PlantDandelion</defName>
        <label>Rimadia</label>
        <description>These strongly scented flowers have petals which curl up during the day. They bloom in the late evening and stay open until dawn.</description>
        <statBases>
            <MaxHitPoints>85</MaxHitPoints>
            <Beauty>12</Beauty>
        </statBases>
        <graphicData>
            <texPath>Things/dandelion</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <altitudeLayer>Item</altitudeLayer>
        <selectable>true</selectable>
        <plant>
            <dieIfLeafless>true</dieIfLeafless>
            <reproduces>false</reproduces>
            <harvestTag>Standard</harvestTag>
            <harvestDestroys>True</harvestDestroys>
            <sowWork>200</sowWork>
            <sowTags>
                <li>Ground</li>
                <li>Decorative</li>
            </sowTags>
            <growMinGlow>0.3</growMinGlow>
            <topWindExposure>0.1</topWindExposure>
            <lifespanFraction>10</lifespanFraction>
            <visualSizeRange>
                <min>0.3</min>
                <max>1.1</max>
            </visualSizeRange>
        </plant>
    </ThingDef>
	
</Plants>