<!-- Modular Tables -->
  
	<ThingDef ParentName="Anon2TableSimpleSurfaceBase">
		<defName>Anon2CounterA</defName>
		<label>Counter</label>
		<thingClass>Building</thingClass>
		<category>Building</category>
		<description>An Counter, has a large flat top.</description>
		<graphicData>
			<texPath>Things/Building/Furniture/TableStuff/Linked/Counter_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<linkType>CornerFiller</linkType>
			<linkFlags>
				<li>Custom6</li>
			</linkFlags>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
				<edgeTop>Damage/Edge</edgeTop>
				<edgeBot>Damage/Edge</edgeBot>
				<edgeLeft>Damage/Edge</edgeLeft>
				<edgeRight>Damage/Edge</edgeRight>
			</damageData>
		</graphicData>
		<blueprintGraphicData>
			<texPath>Things/Building/Furniture/TableStuff/Linked/Counter_Blueprint_Atlas</texPath>
		</blueprintGraphicData>
		<uiIconPath>Things/Building/Furniture/TableStuff/Linked/Counter_MenuIcon</uiIconPath>
		<statBases>
			<MaxHitPoints>180</MaxHitPoints>
			<WorkToBuild>600</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>2</Beauty>
			<Mass>20</Mass>
		</statBases>    
		<costList>
			<WoodLog>4</WoodLog>
		</costList>
		<costStuffCount>8</costStuffCount>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<blockWind>false</blockWind>
		<coversFloor>true</coversFloor>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<tickerType>Never</tickerType>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<holdsRoof>false</holdsRoof>
		<staticSunShadowHeight>0.8</staticSunShadowHeight>
		<blockLight>false</blockLight>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>40</pathCost>
		<pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.65</fillPercent>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<building>
			<isInert>true</isInert>
			<ignoreNeedsPower>true</ignoreNeedsPower>
		</building>
		<damageMultipliers>
			<li>
				<damageDef>Bomb</damageDef>
				<multiplier>1.5</multiplier>
			</li>
		</damageMultipliers>
		<researchPrerequisites>
			<li>PPCompConstruction</li>
		</researchPrerequisites>
	</ThingDef>	
	
