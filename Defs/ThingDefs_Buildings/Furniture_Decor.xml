	<ThingDef ParentName="Anon2BuildingBase">
		<defName>Anon2PlantSpot</defName>
		<label>modular planter</label>
		<thingClass>Building_PlantGrower</thingClass>
		<category>Building</category>
		<graphicData>
			<texPath>Things/Building/Furniture/FurnitureBasic/Linked/PlantSpot_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<linkType>CornerFiller</linkType>
			<linkFlags>
				<li>Custom5</li>
			</linkFlags>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
				<edgeTop>Damage/Edge</edgeTop>
				<edgeBot>Damage/Edge</edgeBot>
				<edgeLeft>Damage/Edge</edgeLeft>
				<edgeRight>Damage/Edge</edgeRight>
			</damageData>
		</graphicData>
		<blueprintGraphicData>
			<texPath>Things/Building/Furniture/FurnitureBasic/Linked/PlantSpot_Blueprint_Atlas</texPath>
		</blueprintGraphicData>
			<uiIconPath>Things/Building/Furniture/FurnitureBasic/Linked/PlantSpot_MenuIcon</uiIconPath>
		<statBases>
			<MaxHitPoints>110</MaxHitPoints>
			<WorkToBuild>100</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>    
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>15</costStuffCount>
		<description>A large flat pot for decorative flowers.</description>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<blockWind>false</blockWind>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.1</fillPercent>
		<coversFloor>false</coversFloor>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<holdsRoof>false</holdsRoof>
		<staticSunShadowHeight>0.2</staticSunShadowHeight>
		<blockLight>false</blockLight>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<PathCost>10</PathCost>
        <fertility>1.0</fertility>
		<building>
			<isInert>true</isInert>
			<ignoreNeedsPower>true</ignoreNeedsPower>
			<defaultPlantToGrow>PlantDaylily</defaultPlantToGrow>
			<sowTag>Decorative</sowTag>
		</building>
		<damageMultipliers>
			<li>
				<damageDef>Bomb</damageDef>
				<multiplier>1.25</multiplier>
			</li>
		</damageMultipliers>
		<designationCategory>Furniture</designationCategory>
		<researchPrerequisites>
			<li>PPCompConstruction</li>
		</researchPrerequisites>
	</ThingDef>
	
