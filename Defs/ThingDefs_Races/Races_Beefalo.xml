<Defs>
	
<!-- Beefalo -->	
	
	<ThingDef ParentName="RimStarveThingBase">
		<thingClass>RimStarvePawn</thingClass>
		<defName>Beefalo</defName>
		<label>beefalo</label>
		<description>A large herding herbivore descended from buffalo and adapted for some exotic environment. Peaceful unless disturbed.</description>
		<statBases>
			<MoveSpeed>3.6</MoveSpeed>
			<ComfyTemperatureMin>-60</ComfyTemperatureMin>
			<MarketValue>600</MarketValue>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<defaultCooldownTime>1.65</defaultCooldownTime>
				<meleeDamageBaseAmount>8</meleeDamageBaseAmount>
				<meleeDamageDef>Blunt</meleeDamageDef>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
			</li>
			<li>
				<verbClass>Verb_MeleeAttack</verbClass>
				<defaultCooldownTime>2.10</defaultCooldownTime>
				<meleeDamageBaseAmount>12</meleeDamageBaseAmount>
				<meleeDamageDef>Blunt</meleeDamageDef>
				<linkedBodyPartsGroup>BeefaloHornsAttackTool</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>20</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
		</verbs>
		<comps>
			<li Class="CompProperties_Milkable">
					<milkDef>Milk</milkDef>
					<milkIntervalDays>2</milkIntervalDays>
					<milkAmount>6</milkAmount>
			</li>
			<li Class="CompProperties_Shearable">
				<woolDef>BeefaloWool</woolDef>
				<shearIntervalDays>30</shearIntervalDays>
				<woolAmount>100</woolAmount>
			</li>
		</comps>
		<race>
			<deathActionWorkerClass>DeathActionWorker_DropBodyParts</deathActionWorkerClass>
			<wildBiomes>
				<ExtremeDesert>0.2</ExtremeDesert>
				<Desert>0.3</Desert>
				<AridShrubland>1.0</AridShrubland>
				<TemperateForest>0.4</TemperateForest>
				<BorealForest>0.4</BorealForest>
			</wildBiomes>
			<herdAnimal>true</herdAnimal>
			<body>Beefalo_QuadrupedAnimalWithHoovesAndTwoHorns</body>
			<baseBodySize>2.0</baseBodySize>
			<baseHealthScale>1.75</baseHealthScale>
			<foodType>VegetarianRoughAnimal</foodType>
			<leatherColor>(152,170,174)</leatherColor>
			<leatherInsulation>0.8</leatherInsulation>
			<gestationPeriodDays>30</gestationPeriodDays>
			<wildness>0.6</wildness>
			<nuzzleMtbHours>120</nuzzleMtbHours>
			<packAnimal>true</packAnimal>
			<lifeExpectancy>12</lifeExpectancy>
			<lifeStageAges>
				<li>
					<def>AnimalBaby</def>
					<minAge>0</minAge>
				</li>
				<li>
					<def>AnimalJuvenile</def>
					<minAge>0.25</minAge>
				</li>
				<li>
					<def>AnimalAdult</def>
					<minAge>1.5</minAge>
					<soundWounded>Pawn_Muffalo_Wounded</soundWounded>
					<soundDeath>Pawn_Muffalo_Death</soundDeath>
					<soundCall>Pawn_Muffalo_Call</soundCall>
					<soundAngry>Pawn_Muffalo_Angry</soundAngry>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
		</race>
		<tradeTags>
			<li>StandardAnimal</li>
		</tradeTags>
	</ThingDef>
	
</Defs>